<Events For="ScrollBar" Desc="Events For ScrollBar Control">
	<Event>
		<Name>OnPosChange</Name>
		<Desc>Fires when the position of the specified scrollbar control has changed.</Desc>	
		<Args>
			<Arg>
				<Name>ScrollBar</Name>
				<Var>e_Sender</Var>
				<Type>object</Type>
				<SubType>ScrollBar</SubType>
				<Default>nil</Default>
				<Desc>Handle of the control that fires this event.</Desc>
			</Arg>
			<Arg>
				<Name>Position</Name>
				<Var>e_Pos</Var>
				<Type>number</Type>
				<SubType>none</SubType>
				<Desc>The new position of the control.</Desc>
			</Arg>
		</Args>
		<Return>
			<Required>0</Required>
			<Type>number</Type>
			<Default>0</Default>
			<Desc>No return value expected for this event.</Desc>
		</Return>
		<Script>
		</Script>	
	</Event>
</Events>
